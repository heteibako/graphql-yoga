generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model Post {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  createdAt DateTime? @db.Date
  title     String
  imagePath String
  updatedAt DateTime? @db.Date
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?   @db.ObjectId
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime? @db.Date
  email     String
  name      String
  password  String
  updatedAt DateTime? @db.Date
  posts     Post[]
}
